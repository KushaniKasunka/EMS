@model IEnumerable<FEMS.Database.project_progress>

@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Project Progresses</h2>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-success btn-primary btn-sm" })
</p>



<div class="code-cut">
    @Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(p => p.project.project_name).Titled("Project Name").Filterable(true);
    Columns.Add(p => p.no_of_tasks).Titled("No of Tasks").Filterable(true);
    Columns.Add(p => p.no_of_finished_tasks).Titled("No of Finished Tasks").Filterable(true);
    Columns.Add(p => p.days_remaining).Titled("Days Remaining").Filterable(true);


    Columns.Add()
        .Titled("")
        .SetWidth(15)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(p => Html.ActionLink("Edit", "Edit", "ProjectProgresses", new { id = p.progress_id }, htmlAttributes: new { @class = "btn btn-warning btn-primary btn-sm" })
        .ToHtmlString());

    Columns.Add()
        .Titled("")
        .SetWidth(15)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(p => Html.ActionLink("Details", "Details", "ProjectProgresses", new { id = p.progress_id }, htmlAttributes: new { @class = "btn btn-info btn-primary btn-sm" })
        .ToHtmlString());

    Columns.Add()
        .Titled("")
        .SetWidth(15)
        .Filterable(true)
        .Sanitized(false)
        .Encoded(false)
        .RenderValueAs(p => Html.ActionLink("Delete", "Delete", "ProjectProgresses", new { id = p.progress_id }, htmlAttributes: new { @class = "btn btn-danger btn-primary btn-sm" })
        .ToHtmlString());

}).WithPaging(10).Sortable().Filterable()
</div>

