                @Html.ValidationMessageFor(model => model.emp_lname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.emp_nic, htmlAttributes: new { @class = "control-label col-md-2" })
