@model FEMS.Database.project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.project_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.project_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.project_location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.project_location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.project_budget)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.project_budget)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.project_assign_date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.project_assign_date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.project_deadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.project_deadline)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.project_approval_status)
        </dt>

        <dd>
            @if (Model.project_approval_status == 1)
            {
                @Html.DisplayName("Pending")
            }
            else
            {
                @Html.DisplayName("Approved")
            }
        </dd>

        
    </dl>
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.project_id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

@if (User.IsInRole("Manager"))
{
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
}
